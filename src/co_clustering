# Charger les données
using DelimitedFiles
data = readdlm("data/iris.data", ',')
X = data[:,1:4]
y = data[:,5]

# Importer le module SpectralClustering
using SpectralClustering

# Définir les paramètres
k = 3 # nombre de clusters
eps = 0.01 # tolérance
max_iter = 100 # nombre d'itérations maximales

# Appliquer la méthode de co-clustering Spectral Biclustering
model = SpectralClustering.SpectralBiclustering(X', k, eps, max_iter)

# Obtenir les indices des clusters
row_labels = model.row_labels
col_labels = model.col_labels

# Afficher les résultats
println("Clusters:")
for i=1:k
    println("Cluster $i:")
    for j=1:length(y)
        if row_labels[j] == i
            println("  - Donnée $j (classe $y[j])")
        end
    end
end
